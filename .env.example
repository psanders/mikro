# Mikro Development Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=file:./data/dev.db

# API Server
PORT=3000

# Basic auth credentials for system API access (format: username:password)
SYSTEM_BASICAUTH=admin:secret

# API URL for CLI and other clients
MIKRO_API_URL=http://localhost:3000

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id-here
WHATSAPP_ACCESS_TOKEN=your-access-token-here
WHATSAPP_VERIFY_TOKEN=mikro_webhook_token
