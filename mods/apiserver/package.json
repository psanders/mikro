{
  "name": "@mikro/apiserver",
  "version": "1.0.0",
  "description": "Mikro API Server - REST APIs, webhooks, and admin functionality",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "prisma generate && tsc",
    "typecheck": "tsc --noEmit",
    "test": "echo \"No tests yet\"",
    "start": "nodemon --watch src --watch ../common/src --watch ../agents/src --ext ts --exec 'npm run build && node dist/index.js'",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed"
  },
  "dependencies": {
    "@mikro/agents": "^1.0.0",
    "@mikro/common": "^1.0.0",
    "@prisma/client": "^7.3.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "nodemon": "^3.1.10",
    "prisma": "^7.3.0",
    "typescript": "^5.9.3"
  }
}
