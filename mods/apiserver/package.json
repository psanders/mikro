{
  "name": "@mikro/apiserver",
  "version": "1.0.0",
  "description": "Mikro API Server - REST APIs, webhooks, and admin functionality",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "prisma generate && tsc",
    "typecheck": "tsc --noEmit",
    "test": "mocha",
    "start": "nodemon --watch src --watch ../common/src --watch ../agents/src --ignore src/generated --ext ts --exec 'npm run build && node dist/index.js'",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed"
  },
  "dependencies": {
    "@mikro/agents": "^1.0.0",
    "@mikro/common": "^1.0.0",
    "@prisma/adapter-better-sqlite3": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@trpc/server": "^11.8.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.10",
    "@types/sinon": "^21.0.0",
    "@types/sinon-chai": "^4.0.0",
    "chai": "^6.2.2",
    "mocha": "^11.7.5",
    "nodemon": "^3.1.10",
    "prisma": "^7.3.0",
    "sinon": "^21.0.1",
    "sinon-chai": "^4.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
