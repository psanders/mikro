generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

// =============================================================================
// Enums
// =============================================================================

enum Role {
  ADMIN
  COLLECTOR
  REFERRER

  @@map("roles")
}

enum LoanType {
  SAN // Fixed periodic payments until paid in full

  @@map("loan_types")
}

enum LoanStatus {
  ACTIVE
  COMPLETED
  DEFAULTED
  CANCELLED

  @@map("loan_statuses")
}

enum PaymentFrequency {
  DAILY
  WEEKLY

  @@map("payment_frequencies")
}

enum PaymentMethod {
  CASH
  TRANSFER

  @@map("payment_methods")
}

enum PaymentStatus {
  COMPLETED
  REVERSED
  PENDING

  @@map("payment_statuses")
}

enum MessageRole {
  AI
  HUMAN

  @@map("message_roles")
}

enum AttachmentType {
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT

  @@map("attachment_types")
}

// =============================================================================
// Models
// =============================================================================

model User {
  id        String   @id @default(uuid())
  name      String
  phone     String
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  roles             UserRole[]
  createdMembers    Member[]   @relation("CreatedBy")
  referredMembers   Member[]   @relation("ReferredBy")
  assignedMembers   Member[]   @relation("AssignedCollector")
  messages          Message[]
  collectedPayments Payment[]  @relation("CollectedPayments")

  @@map("users")
}

model UserRole {
  id     String @id @default(uuid())
  role   Role
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  @@unique([userId, role])
  @@index([userId])
  @@map("user_roles")
}

model Member {
  id                  String   @id @default(uuid())
  name                String
  phone               String
  idNumber            String   @map("id_number")
  collectionPoint     String?   @map("collection_point")
  homeAddress         String   @map("home_address")
  jobPosition         String?  @map("job_position")
  income              Decimal?
  isBusinessOwner     Boolean  @default(false) @map("is_business_owner")
  isActive            Boolean  @default(false) @map("is_active")
  idCardOnRecord      Boolean  @default(false) @map("id_card_on_record")
  notes               String?  @map("notes")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  // Relations
  createdBy           User?    @relation("CreatedBy", fields: [createdById], references: [id])
  createdById         String?  @map("created_by_id")
  referredBy          User     @relation("ReferredBy", fields: [referredById], references: [id])
  referredById         String   @map("referred_by_id")
  assignedCollector   User?    @relation("AssignedCollector", fields: [assignedCollectorId], references: [id])
  assignedCollectorId String?  @map("assigned_collector_id")

  loans    Loan[]
  messages Message[]

  @@index([createdById])
  @@index([assignedCollectorId])
  @@index([phone])
  @@map("members")
}

model Loan {
  id               String           @id @default(uuid())
  loanId           Int              @unique @map("loan_id") // Generated in app code, starts at 10000
  type             LoanType         @default(SAN)
  status           LoanStatus       @default(ACTIVE)

  // Flexible loan configuration
  principal        Decimal          // Amount borrowed (e.g., 5000 or 10000)
  termLength       Int              @map("term_length") // Number of periods (e.g., 10)
  paymentAmount    Decimal          @map("payment_amount") // Expected per period (e.g., 650)
  paymentFrequency PaymentFrequency @map("payment_frequency") // DAILY or WEEKLY
  notes            String?

  createdAt        DateTime         @default(now()) @map("created_at")
  updatedAt        DateTime         @updatedAt @map("updated_at")

  // Relations
  member   Member    @relation(fields: [memberId], references: [id], onDelete: Cascade)
  memberId String    @map("member_id")
  payments Payment[]

  @@index([memberId])
  @@index([status])
  @@map("loans")
}

model Message {
  id        String      @id @default(uuid())
  role      MessageRole
  content   String
  tools     String? // JSON array of tool names, e.g. ["search", "calculate"] - only for AI
  createdAt DateTime    @default(now()) @map("created_at")

  // Relations - message belongs to either a Member OR a User
  member      Member?      @relation(fields: [memberId], references: [id], onDelete: Cascade)
  memberId    String?      @map("member_id")
  user        User?        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String?      @map("user_id")
  attachments Attachment[]

  @@index([memberId])
  @@index([userId])
  @@index([createdAt])
  @@map("messages")
}

model Attachment {
  id        String         @id @default(uuid())
  type      AttachmentType
  url       String
  name      String?
  mimeType  String?        @map("mime_type")
  size      Int?
  createdAt DateTime       @default(now()) @map("created_at")

  // Relations
  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId String  @map("message_id")

  @@index([messageId])
  @@map("attachments")
}

model Payment {
  id        String        @id @default(uuid())
  amount    Decimal       // Amount paid
  paidAt    DateTime      @default(now()) @map("paid_at")
  method    PaymentMethod @default(CASH)
  status    PaymentStatus @default(COMPLETED)
  notes     String?

  // Relations
  loan          Loan    @relation(fields: [loanId], references: [id], onDelete: Cascade)
  loanId        String  @map("loan_id")
  collectedBy   User?   @relation("CollectedPayments", fields: [collectedById], references: [id])
  collectedById String? @map("collected_by_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([loanId])
  @@index([collectedById])
  @@index([paidAt])
  @@map("payments")
}
