{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "incremental": true
  },
  "references": [
    { "path": "./mods/common" },
    { "path": "./mods/agents" },
    { "path": "./mods/ctl" }
  ],
  "files": [],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
